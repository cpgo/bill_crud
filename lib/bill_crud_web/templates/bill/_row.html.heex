<div id={"bill-#{@bill.id}-row"}>
  <strong>Value:</strong>
  <%= @bill.value %>
  <strong>Description:</strong>
  <%= @bill.description %>
  <div>
    <span><%= link "Show", to: Routes.bill_path(@conn, :show, @bill) %></span>
    <turbo-frame id={"bill-#{@bill.id}"}>
      <span><%= link "Edit", to: Routes.bill_path(@conn, :edit, @bill) %></span>
    </turbo-frame>
    <span><%= link "Delete", to: Routes.bill_path(@conn, :delete, @bill), method: :delete, data: [confirm: "Are you sure?", "turbo-action": "replace"] %></span>
  </div>
</div>
